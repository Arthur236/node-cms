<form class="splash-container" action="/auth/register" method="post">
  <div class="card">
    <div class="card-header text-center">
      <a href="/"><span style="font-size: 3em;"><i class="fab fa-centercode"></i></span></a>
      <span class="splash-description">Please enter your user information to register.</span>
    </div>

    <div class="card-body">
      <div class="form-group">
        <input class="form-control form-control-lg {{#if errors.username}} is-invalid {{/if}}" id="username"
               name="username" type="text" placeholder="Username *" value="{{username}}" required>
        <div class="invalid-feedback">
          {{errors.username}}
        </div>
      </div>

      <div class="form-group">
        <input class="form-control form-control-lg" id="firstName" name="firstName" type="text" value="{{firstName}}"
               placeholder="First Name">
      </div>

      <div class="form-group">
        <input class="form-control form-control-lg" id="lastName" name="lastName" type="text" value="{{lastName}}"
               placeholder="Last Name">
      </div>

      <div class="form-group">
        <input class="form-control form-control-lg {{#if errors.email}} is-invalid {{/if}}" id="email" name="email"
               type="email" placeholder="E-mail *" value="{{email}}" required>
        <div class="invalid-feedback">
          {{errors.email}}
        </div>
      </div>

      <div class="form-group">
        <input class="form-control form-control-lg {{#if errors.password}} is-invalid {{/if}}" id="password"
               name="password" type="password" placeholder="Password *" required>
        <div class="invalid-feedback">
          {{errors.password}}
        </div>
      </div>

      <div class="form-group">
        <input class="form-control form-control-lg {{#if errors.password2}} is-invalid {{/if}}" id="password2"
               name="password2" type="password" placeholder="Confirm Password *" required>
        <div class="invalid-feedback">
          {{errors.password2}}
        </div>
      </div>

      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <input class="custom-control-input" type="checkbox" required>
          <span class="custom-control-label">
              By creating an account, you agree to the <a href="#">terms and conditions</a>
            </span>
        </label>
      </div>

      <div class="form-group pt-2">
        <button class="btn btn-block btn-primary" type="submit">Register My Account</button>
      </div>

      <div class="form-group row pt-0">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
          <button class="btn btn-block btn-social btn-facebook " type="button">Facebook</button>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
          <button class="btn  btn-block btn-social btn-twitter" type="button">Twitter</button>
        </div>
      </div>
    </div>

    <div class="card-footer bg-white">
      <p>Already member? <a href="/auth/login" class="text-secondary">Login Here.</a></p>
    </div>
  </div>
</form>
