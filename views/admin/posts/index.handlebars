<div class="container-fluid dashboard-content">
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
      <div class="page-header">
        <h2 class="pageheader-title">Posts</h2>
        <div class="page-breadcrumb">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/admin" class="breadcrumb-link">Dashboard</a></li>
              <li class="breadcrumb-item active" aria-current="page">Posts</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  {{> flash-messages }}

  <div class="row">
    {{#each posts}}

      <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
        <div class="card card-figure">
          <figure class="figure">
            <div class="figure-img">
              <img class="img-fluid" {{#if photo}} src="/uploads/{{photo}}" {{else}} src="/images/card-placeholder.png" {{/if}} alt="{{title}}">

              <div class="figure-description">
                <h6 class="figure-title"> {{title}} </h6>
                <p class="text-muted mb-0">
                  <small>Status: {{status}}</small>
                </p>

                <p class="text-muted mb-0">
                  <small>Category: {{category.name}}</small>
                </p>

                <p class="text-muted mb-0">
                  <small>Allow Comments: {{allowComments}}</small>
                </p>

                <p class="text-muted mb-0">
                  <small>Date: {{formatDate date 'MMMM Do YYYY'}}</small>
                </p>
              </div>

              <div class="figure-action">
                <a href="/admin/posts/{{slug}}" class="btn btn-block btn-sm btn-primary">View</a>
              </div>
            </div>

            <figcaption class="figure-caption">
              <ul class="list-inline d-flex text-muted mb-0">
                <li class="list-inline-item mr-auto">
                  <span class="oi oi-paperclip"></span> {{title}} </li>
                <li class="list-inline-item">
                  <span class="oi oi-calendar"></span>
                </li>
              </ul>
            </figcaption>
          </figure>
        </div>
      </div>

    {{/each}}

  </div>
</div>
